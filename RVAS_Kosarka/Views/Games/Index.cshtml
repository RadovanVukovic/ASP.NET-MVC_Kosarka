@model List<RVAS_Kosarka.Models.Game>
@{
    ViewBag.Title = "Index";
}

<h2>All Games</h2>

@if (!Model.Any())
{
    <p>We don't have any games yet. </p>
}
else
{
    <table class="table  table-dark  table-striped table-bordered">
        <thead>
            <tr>
                <th>Points Home</th>

                <th>Points Away</th>
                <th>Date</th>
                <th>Stadium</th>
                <th>City</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.HomePoints</td>

                    <td>@item.AwayPoints</td>
                    <td>@item.Date</td>
                    <td>@item.Stadium</td>
                    <td>@item.City</td>

                    <td>

                        <button type="button" class="btn btn-secondary mr-3 mt-4">
                            @Html.ActionLink("Box Score", "Show", routeValues: new { Id = item.Id })
                        </button>


                    </td>
                </tr>
            }
        </tbody>
    </table>
}


